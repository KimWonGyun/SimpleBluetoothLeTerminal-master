<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@+id/send_btn"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="#D72424"
            android:text="Write" />

        <Button
            android:id="@+id/send_btn2"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="120dp"
            android:layout_toEndOf="@+id/send_btn"
            android:background="#1EEA33"
            android:text="Read" />


        <!--<TextView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="SMART IP CLOCK"
            android:textColor="#000000"
            android:textSize="20dp"></TextView>
            -->


        <ImageView
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_margin="8dp"
            android:src="@drawable/daeyang"></ImageView>

    </RelativeLayout>

    <TextView
        android:id="@+id/receive_text"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_weight="0"
        android:freezesText="true"
        android:gravity="bottom"
        android:scrollbars="vertical"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <View
        android:layout_width="match_parent"
        android:background="?android:attr/listDivider"
        android:layout_height="2dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" SERVER IP"
            android:textColor="#FFFFFF"
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/send_text1"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:hint="SERVER IP"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:textColor="#0000FF"
            android:text="192,168,10,253"
            android:background="@drawable/edittext_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" LOCAL IP"
            android:textColor="#FFFFFF"
            android:textSize="18sp"></TextView>


        <EditText
            android:id="@+id/send_text2"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:hint="LOCAL IP"
            android:text="192,168,10,99"
            android:textColor="#0000FF"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:background="@drawable/edittext_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" GATE WAY"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            ></TextView>

        <EditText
            android:id="@+id/send_text3"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:hint=" GATE WAY"
            android:text="192,168,10,1"
            android:textColor="#0000FF"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:background="@drawable/edittext_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" DNS"
            android:textColor="#FFFFFF"
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/send_text4"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:hint="DNS"
            android:inputType="text|textNoSuggestions"
            android:text="192,168,10,1"
            android:textColor="#0000FF"
            android:singleLine="true"
            android:background="@drawable/edittext_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" SUBNET"
            android:textColor="#FFFFFF"
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/send_text5"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:hint="SUBNET"
            android:text="255,255,255,0"
            android:textColor="#0000FF"
            android:inputType="text|textNoSuggestions"
            android:singleLine="true"
            android:background="@drawable/edittext_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" PORT"
            android:textColor="#FFFFFF"
            android:textSize="18sp"></TextView>

        <EditText
            android:id="@+id/send_text6"
            android:layout_width="300dp"
            android:layout_height="47dp"
            android:layout_margin="8dp"
            android:hint="PORT"
            android:text="123"
            android:inputType="text|textNoSuggestions"
            android:textColor="#0000FF"
            android:singleLine="true"
            android:background="@drawable/edittext_rectangle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounding"
            android:text=" MAC"
            android:textColor="#FFFFFF"
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:text="0X"
                android:textColor="#000000"
                android:layout_weight="1"
                android:textSize="19sp"></TextView>

            <EditText
                android:id="@+id/data6"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/edittext_rectangle"
                android:textColor="#0000FF"
                android:layout_weight="2"
                android:text="BE" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="0X"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="19sp"></TextView>

        <EditText
            android:id="@+id/data7"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/edittext_rectangle"
            android:textColor="#0000FF"
            android:layout_weight="2"
            android:text="BE" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="0X"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="19sp"></TextView>

        <EditText
            android:id="@+id/data8"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/edittext_rectangle"
            android:textColor="#0000FF"
            android:layout_weight="2"
            android:text="BE" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="0X"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="19sp"></TextView>


        <EditText
            android:id="@+id/data9"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/edittext_rectangle"
            android:textColor="#0000FF"
            android:layout_weight="2"
            android:text="09" />


        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="0X"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="19sp"></TextView>


        <EditText
            android:id="@+id/data10"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/edittext_rectangle"
            android:textColor="#0000FF"
            android:layout_weight="2"
            android:text="00" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:text="0X"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="19sp" />


        <EditText
            android:id="@+id/data11"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/edittext_rectangle"
            android:textColor="#0000FF"
            android:layout_weight="2"
            android:text="26"
            />
        </LinearLayout>



<!--
        <EditText
            android:id="@+id/data12"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:hint="NAME"
            android:text="CK"
            android:inputType="text|textNoSuggestions"
            android:textColor="#0000FF"
            android:singleLine="true"
            android:background="@drawable/edittext_rectangle"/>
-->
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp">

        <Spinner
            android:entries="@array/spch"
            android:id="@+id/spchlist"
            android:layout_width="100dp"
            android:background="@drawable/spinner_background"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            ></Spinner>

        <Spinner
            android:entries="@array/DIMM"
            android:id="@+id/DIM"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/spchlist"
            android:background="@drawable/spinner_background"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            ></Spinner>

        <Button
            android:id="@+id/send_btn5"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="#CCCCCC"
            android:text="RST"
            android:textColor="#FF0000"></Button>
    </RelativeLayout>

</LinearLayout>

</ScrollView>